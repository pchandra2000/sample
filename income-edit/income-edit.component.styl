:host
  margin-bottom 30px

:host /deep/

  /* field */

  .mat-form-field
  .mat-radio-group
  .mat-checkbox
    margin-bottom 10px
    display block
    width 100%

  .mat-form-field

    .mat-form-field-wrapper
      padding-bottom 0
      width calc( 100% - 20px )

    .mat-form-field-flex
      align-items center

    .mat-form-field-infix
      position relative
      padding 0
      border 0

    .mat-form-field-underline
      bottom auto

  .mat-radio-group
    .mat-radio-button
      margin-bottom 10px
      margin-right 10px

  /* label */

  .mat-form-label
  .mat-radio-label
  .mat-checkbox-label
    white-space normal

  /* input */

  .mat-input-element
  .mat-form-field-label
    padding-top 10px
    padding-bottom 10px
    box-sizing border-box
    line-height initial
    margin 0

  .mat-form-field-label
    position relative
    left auto
    top auto

  /* select */

  .mat-select-value
    padding 10px
    line-height initial

  .mat-select-arrow-wrapper
    padding-right 8px

  /* radio */
  /* check */

  .mat-checkbox
  .mat-radio-button
    label
      padding 10px
      padding-left 0

  /* icons */

  .mat-has-prefix
    .mat-input-element
    .mat-form-field-label
    .mat-select-element
      padding-left 20px

  .mat-has-suffix
    .mat-input-element
    .mat-form-field-label
    .mat-select-element
      padding-right 20px

  .mat-form-field-prefix
  .mat-form-field-suffix
    text-align center
    position absolute
    padding-bottom 10px
    padding-top 10px
    width 20px
    top 0

  .mat-form-field-prefix
    left 0

  .mat-form-field-suffix
    right 0

  .mat-icon-button
    height 20px
    width 20px

  /* error */

  .mat-form-field-invalid

    .mat-form-field-infix
      border-color #a00

    i
    .mat-icon svg
    .mat-icon-button svg
      color #a00
      fill #a00

/* label */

.mat-form-label

  &
    margin-bottom 10px
    display inline-block

  .mat-form-tooltip
    font-size 20px
    position relative
    margin-left 1px
    top 1px

/* error */

.mat-error
  &
    display block
  div
    margin-bottom 5px
  div:last-child
  &.small
    margin 0


.form-control-container
  padding-bottom 30px


.mat-form-actions
  margin-bottom 20px

.mat-raised-button
  margin-right 15px
  margin-bottom 15px
  display inline-block



a
span
  font-size 1.4rem

.fileUpload
  border 1px solid #4D4D4D
  padding 5px 0px 8px 35px
  display inline-block
  width 80%
  min-width 80%
  height 28px

.filedialogContainer input:focus + label
  outline -webkit-focus-ring-color 1px auto !important

.fileUploadLabel
  position relative

.fileUploadLabel:before
  font-family FontAwesome
  content "\f0c6"
  position absolute
  left 10px
  top 8px

.thumb
  height 75px
  border 1px solid #000
  margin 10px 5px 0 0


